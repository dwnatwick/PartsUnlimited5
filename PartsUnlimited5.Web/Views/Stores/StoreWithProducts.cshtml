@model PartsUnlimited5.Web.Models.Store

@{
    ViewData["Title"] = "StoreWithProducts";
}

<h1>StoreWithProducts</h1>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedByUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedByUser.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastModifiedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModifiedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastModifiedByUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModifiedByUser.Id)
        </dd>
    </dl>
</div>
<div class="row">
    @foreach (var inventory in Model.Inventory)
    { 
        <div class="col-md-3">
            <div class="col-md-3">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@inventory.Product.Id">
                    <div class="card">
                        <div class="card-header card-header-dim">
                            <span style="font-weight: bold; font-size:18px;">@inventory.Product.Title</span>
                        </div>
                        <div class="card-body">
                            <img class="img-fluid" src="/images/@inventory.Product.ProductArtUrl" alt="@inventory.Product.Title" />
                        </div>
                        <div class="card-footer">
                            <span style="font-weight: normal; font-size:16px;">@inventory.Product.Price.ToString("C")</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
